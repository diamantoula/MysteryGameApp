<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_interaction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mysterygameapp.Interaction">

    <TextView
        android:id="@+id/tvGreetingInteraction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bOpenWindowClue1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGreetingInteraction"
        android:text="Show Me First Clue..."/>

    <Button
        android:id="@+id/bOpenWindowClue2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bOpenWindowClue1"
        android:text="Show Me Second Clue..."/>

    <Button
        android:id="@+id/bReturnFromInteraction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bOpenWindowClue2"
        android:text="Return..."/>

</RelativeLayout>
